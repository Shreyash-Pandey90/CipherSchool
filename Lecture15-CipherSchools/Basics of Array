public class Lecture15 {

    static void print(int arr[])
    {
        for(int i=0;i<arr.length;i++)
        {
            System.out.print(arr[i]+" ");
        }
    }

    public static void main(String args[])
    {
    int size=5;
    int arr[]=new int[size]; //combination of two
    //int arr[] -> array declaration expression
    //new int[size] -> creating object and assigining rfrence to variable above we created
    print(arr);
    for(int i=0;i<arr.length;i++)
    {
        arr[i]=i+1;
    }
    print(arr);

// Array initilizers list
    int arr2[]={1,2,3};
    print(arr2);

//if we want to increase size of an array
int copyArray[]=new int [2*size]; //but doing this way is not efficient in terms of 
                                // space and time


    
}}
